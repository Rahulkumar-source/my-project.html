<script type="text/javascript">
   var x=document.getElementById("personalbutton");
   var y=document.getElementById("educationalbutton");
   var z=document.getElementById("hobbiesbutton");
   x.addEventListener("click",personal);
   y.addEventListener("click",educational);
   z.addEventListener("click",hobbies);

        function personal(){
            document.getElementById("personal").style.display="block";
			document.getElementById("educational").style.display="none";
			document.getElementById("hobbies").style.display="none";
			}
			
	   function educational(){
	        document.getElementById("educational").style.display="block";
			document.getElementById("personal").style.display="none";
			document.getElementById("hobbies").style.display="none";
			}
			
		function hobbies(){
	        document.getElementById("hobbies").style.display="block";
			document.getElementById("personal").style.display="none";
			document.getElementById("educational").style.display="none";
			} 
</script>
